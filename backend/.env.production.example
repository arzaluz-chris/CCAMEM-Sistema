# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - BACKEND
# ============================================

# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://usuario:password@host:puerto/nombre_db"

# JWT Secrets (CAMBIAR EN PRODUCCIÓN - Usar secretos seguros)
JWT_SECRET="CAMBIAR-POR-SECRET-SEGURO-64-CARACTERES"
JWT_EXPIRES_IN="8h"
REFRESH_TOKEN_SECRET="CAMBIAR-POR-OTRO-SECRET-SEGURO-64-CARACTERES"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="production"

# CORS (URL del frontend en Vercel)
FRONTEND_URL="https://tu-app.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Opcional - para notificaciones)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="notificaciones@ccamem.gob.mx"
SMTP_PASS="contraseña-de-aplicación"
SMTP_FROM="Sistema CCAMEM <notificaciones@ccamem.gob.mx>"

# Uploads (Opcional - si se implementa subida de archivos)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"

# Logging
LOG_LEVEL="info"

# Sentry (Opcional - para monitoreo de errores)
# SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# ============================================
# NOTAS DE CONFIGURACIÓN
# ============================================
#
# 1. Generar secretos seguros:
#    node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# 2. DATABASE_URL se configura automáticamente en Railway
#
# 3. FRONTEND_URL debe ser la URL de tu deployment en Vercel
#
# 4. Para Railway, configurar estas variables en el dashboard
#
